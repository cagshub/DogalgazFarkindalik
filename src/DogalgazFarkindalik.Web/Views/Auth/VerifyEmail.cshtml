@{
    ViewData["Title"] = "E-posta Dogrulama";
    var success = ViewBag.Success as bool? ?? false;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-center">
                    @if (success)
                    {
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                        <h3 class="mt-3 text-success">E-posta Dogrulandi!</h3>
                        <p class="text-muted mt-3">@ViewBag.Message</p>
                        <a href="/Auth/Login" class="btn btn-primary mt-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giris Yap
                        </a>
                    }
                    else
                    {
                        <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
                        <h3 class="mt-3 text-danger">Dogrulama Basarisiz</h3>
                        <p class="text-muted mt-3">@ViewBag.Message</p>
                        <p class="text-muted">Dogrulama linkinizin suresi dolmus olabilir. Yeni bir dogrulama maili talep edebilirsiniz.</p>
                        <a href="/Auth/Login" class="btn btn-primary mt-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giris Sayfasina Don
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
