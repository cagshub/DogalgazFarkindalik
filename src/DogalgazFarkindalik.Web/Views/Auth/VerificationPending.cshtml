@{
    ViewData["Title"] = "E-posta Dogrulama Bekleniyor";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-center">
                    <i class="bi bi-envelope-check text-primary" style="font-size: 4rem;"></i>
                    <h3 class="mt-3">E-posta Dogrulamasi Bekleniyor</h3>
                    <p class="text-muted mt-3">
                        Kaydiniz basariyla olusturuldu!<br />
                        <strong>@(ViewBag.Email ?? "E-posta adresinize")</strong> adresine bir dogrulama linki gonderdik.
                    </p>
                    <p class="text-muted">
                        Lutfen e-posta kutunuzu kontrol edin ve dogrulama linkine tiklayarak hesabinizi aktif hale getirin.
                    </p>

                    @if (TempData["ResendMessage"] != null)
                    {
                        var isSuccess = TempData["ResendSuccess"] as bool? ?? false;
                        <div class="alert @(isSuccess ? "alert-success" : "alert-danger") mt-3">
                            @TempData["ResendMessage"]
                        </div>
                    }

                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle me-2"></i>
                        E-posta gelmediyse spam/gereksiz klasorunu de kontrol edin.
                    </div>

                    @if (ViewBag.Email != null)
                    {
                        <form method="post" asp-action="ResendVerification" class="mt-3">
                            <input type="hidden" name="email" value="@ViewBag.Email" />
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-repeat me-2"></i>Dogrulama Mailini Tekrar Gonder
                            </button>
                        </form>
                    }

                    <div class="mt-4">
                        <a href="/Auth/Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giris Sayfasina Don
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
