@{
    ViewData["Title"] = "Simülasyon Sonucu";
    var result = (System.Text.Json.JsonElement)ViewBag.Result;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        @{
                            var score = result.GetProperty("score").GetDouble();
                            var badgeClass = score >= 70 ? "bg-success" : score >= 40 ? "bg-warning" : "bg-danger";
                        }
                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center @badgeClass text-white"
                             style="width: 120px; height: 120px; font-size: 2rem;">
                            @score.ToString("F0")%
                        </div>
                    </div>

                    <h3>Simülasyon Tamamlandı!</h3>
                    <p class="text-muted">
                        @result.GetProperty("totalQuestions").GetInt32() sorudan
                        @result.GetProperty("correctAnswers").GetInt32() tanesini doğru cevapladınız.
                    </p>

                    <hr />

                    <div class="text-start">
                        <h5 class="mb-3">Detaylı Sonuçlar</h5>
                        @foreach (var detail in result.GetProperty("details").EnumerateArray())
                        {
                            var isCorrect = detail.GetProperty("isCorrect").GetBoolean();
                            <div class="card mb-2 @(isCorrect ? "border-success" : "border-danger")">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-start">
                                        <i class="bi @(isCorrect ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger") me-2 mt-1"></i>
                                        <div>
                                            <strong>@detail.GetProperty("questionText").GetString()</strong>
                                            <br />
                                            <small class="text-muted">
                                                Doğru cevap: @detail.GetProperty("correctAnswer").GetString()
                                            </small>
                                            @if (detail.TryGetProperty("explanation", out var explanation) && explanation.ValueKind != System.Text.Json.JsonValueKind.Null)
                                            {
                                                <br />
                                                <small class="text-info">@explanation.GetString()</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mt-4">
                        <a href="/Simulations" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>Simülasyonlara Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
