@{
    ViewData["Title"] = "Eğitim Videoları";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2><i class="bi bi-play-circle me-2"></i>Eğitim Videoları</h2>
        <p class="text-muted">Doğalgaz güvenliği hakkında eğitim videolarını izleyin</p>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <form method="get" class="row g-2">
                <div class="col-md-4">
                    <select name="ageGroup" class="form-select">
                        <option value="">Tüm Yaş Grupları</option>
                        <option value="Child" selected="@(ViewBag.SelectedAgeGroup == "Child")">Çocuk (4-12)</option>
                        <option value="Adult" selected="@(ViewBag.SelectedAgeGroup == "Adult")">Yetişkin (13-65)</option>
                        <option value="Senior" selected="@(ViewBag.SelectedAgeGroup == "Senior")">Yaşlı (65+)</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <select name="subscriptionType" class="form-select">
                        <option value="">Tüm Abonelik Tipleri</option>
                        <option value="Bireysel" selected="@(ViewBag.SelectedSubscriptionType == "Bireysel")">Bireysel</option>
                        <option value="Merkezi" selected="@(ViewBag.SelectedSubscriptionType == "Merkezi")">Merkezi</option>
                        <option value="Endustriyel" selected="@(ViewBag.SelectedSubscriptionType == "Endustriyel")">Endüstriyel</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel me-1"></i>Filtrele
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Video Grid -->
    <div class="row g-4">
        @if (ViewBag.Videos is System.Text.Json.JsonElement videos)
        {
            foreach (var video in videos.EnumerateArray())
            {
                <div class="col-md-4">
                    <div class="card card-hover h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="bg-primary bg-opacity-10 rounded p-3 mb-3 text-center">
                                <i class="bi bi-play-btn text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="card-title">@video.GetProperty("title").GetString()</h5>
                            <p class="card-text text-muted small">@video.GetProperty("description").GetString()</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-primary">
                                    <i class="bi bi-clock me-1"></i>@(video.GetProperty("durationSec").GetInt32() / 60) dk
                                </span>
                                <span class="badge bg-secondary">@video.GetProperty("minAgeGroup").GetString()</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
