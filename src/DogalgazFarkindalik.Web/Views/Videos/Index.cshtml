@{
    ViewData["Title"] = "Eğitim Videoları";
}

<div class="container py-5">
    <div class="text-center mb-4">
        <h2><i class="bi bi-play-circle me-2"></i>Eğitim Videoları</h2>
        <p class="text-muted">Doğalgaz güvenliği hakkında eğitim videolarını izleyin</p>
    </div>

    @if (ViewBag.AgeGroup != null || ViewBag.SubscriptionType != null)
    {
        <div class="alert alert-info text-center mb-4">
            <i class="bi bi-person-check me-1"></i>
            Profilinize uygun içerikler gösteriliyor
            @if (ViewBag.AgeGroup != null)
            {
                <span class="badge bg-primary ms-2">
                    @(ViewBag.AgeGroup == "Child" ? "Çocuk (4-12)" : ViewBag.AgeGroup == "Adult" ? "Yetişkin (13-65)" : "65+")
                </span>
            }
            @if (ViewBag.SubscriptionType != null)
            {
                <span class="badge bg-secondary ms-1">@ViewBag.SubscriptionType</span>
            }
        </div>
    }

    <!-- Video Grid -->
    <div class="row g-4">
        @if (ViewBag.Videos is System.Text.Json.JsonElement videos)
        {
            var videoCount = 0;
            var progressList = ViewBag.Progress as System.Text.Json.JsonElement?;
            foreach (var video in videos.EnumerateArray())
            {
                videoCount++;
                var videoId = video.GetProperty("id").GetString();
                int progressPercent = 0;
                bool isCompleted = false;

                if (progressList.HasValue)
                {
                    foreach (var p in progressList.Value.EnumerateArray())
                    {
                        if (p.GetProperty("videoId").GetString() == videoId)
                        {
                            progressPercent = p.GetProperty("progressPercent").GetInt32();
                            isCompleted = p.GetProperty("isCompleted").GetBoolean();
                            break;
                        }
                    }
                }

                <div class="col-md-4">
                    <a href="/Videos/Detail/@videoId" class="text-decoration-none">
                        <div class="card card-hover h-100 border-0 shadow-sm" style="cursor: pointer;">
                            <div class="card-body p-4">
                                <div class="bg-primary bg-opacity-10 rounded p-3 mb-3 text-center position-relative">
                                    @if (isCompleted)
                                    {
                                        <span class="position-absolute top-0 end-0 m-2 badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Tamamlandi
                                        </span>
                                    }
                                    else if (progressPercent > 0)
                                    {
                                        <span class="position-absolute top-0 end-0 m-2 badge bg-warning text-dark">
                                            <i class="bi bi-clock-history me-1"></i>%@progressPercent
                                        </span>
                                    }
                                    <i class="bi bi-play-btn text-primary" style="font-size: 3rem;"></i>
                                </div>
                                <h5 class="card-title text-dark">@video.GetProperty("title").GetString()</h5>
                                <p class="card-text text-muted small">@video.GetProperty("description").GetString()</p>

                                @if (progressPercent > 0)
                                {
                                    <div class="progress mt-2" style="height: 6px;">
                                        <div class="progress-bar @(isCompleted ? "bg-success" : "bg-primary")"
                                             role="progressbar"
                                             style="width: @(progressPercent)%"
                                             aria-valuenow="@progressPercent"
                                             aria-valuemin="0"
                                             aria-valuemax="100"></div>
                                    </div>
                                }

                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="badge bg-primary">
                                        <i class="bi bi-clock me-1"></i>@(video.GetProperty("durationSec").GetInt32() / 60) dk
                                    </span>
                                    @{
                                        var ageLabel = video.GetProperty("minAgeGroup").GetString() switch
                                        {
                                            "Child" => "Cocuk",
                                            "Adult" => "Yetiskin",
                                            "Senior" => "65+",
                                            _ => video.GetProperty("minAgeGroup").GetString()
                                        };
                                    }
                                    <span class="badge bg-secondary">@ageLabel</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }

            if (videoCount == 0)
            {
                <div class="col-12 text-center py-5">
                    <i class="bi bi-camera-video-off text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">Profilinize uygun video bulunamadi.</p>
                </div>
            }
        }
    </div>
</div>
