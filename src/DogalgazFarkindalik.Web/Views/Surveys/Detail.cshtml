@{
    ViewData["Title"] = "Anket";
    var survey = (System.Text.Json.JsonElement)ViewBag.Survey;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="mb-2">@survey.GetProperty("title").GetString()</h3>
                    <p class="text-muted mb-4">@survey.GetProperty("description").GetString()</p>

                    <form method="post" action="/Surveys/Submit/@survey.GetProperty("id").GetString()">
                        @{
                            var questions = survey.GetProperty("questions");
                            int qIndex = 0;
                        }
                        @foreach (var q in questions.EnumerateArray())
                        {
                            qIndex++;
                            var qType = q.GetProperty("type").GetString();
                            <div class="card mb-3 border">
                                <div class="card-body">
                                    <h6 class="mb-3">
                                        <span class="badge bg-success me-2">@qIndex</span>
                                        @q.GetProperty("text").GetString()
                                        <small class="text-muted ms-2">(@qType)</small>
                                    </h6>

                                    @if (qType == "Scale")
                                    {
                                        <div class="mb-2">
                                            <input type="range" class="form-range" min="1" max="10" value="5"
                                                   name="question_@(q.GetProperty("id").GetString())_scale"
                                                   id="scale_@q.GetProperty("id").GetString()"
                                                   oninput="document.getElementById('val_@(q.GetProperty("id").GetString())').textContent=this.value" />
                                            <div class="d-flex justify-content-between">
                                                <small class="text-muted">1 - Çok düşük</small>
                                                <strong id="val_@q.GetProperty("id").GetString()">5</strong>
                                                <small class="text-muted">10 - Çok yüksek</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        @foreach (var opt in q.GetProperty("options").EnumerateArray())
                                        {
                                            <div class="form-check mb-2">
                                                <input class="form-check-input" type="radio"
                                                       name="question_@q.GetProperty("id").GetString()"
                                                       value="@opt.GetProperty("id").GetString()" required />
                                                <label class="form-check-label">@opt.GetProperty("text").GetString()</label>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }

                        <button type="submit" class="btn btn-success btn-lg w-100">
                            <i class="bi bi-send me-2"></i>Yanıtları Gönder
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
