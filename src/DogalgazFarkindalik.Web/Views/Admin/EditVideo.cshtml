@model System.Text.Json.JsonElement
@{
    ViewData["Title"] = "Video Duzenle";
    var id = Model.GetProperty("id").GetString();
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-pencil me-2"></i>Video Duzenle</h2>
        <a href="/Admin/Videos" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Geri</a>
    </div>

    @if (TempData["Error"] is string errorMsg)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @errorMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form method="post" action="/Admin/EditVideo?id=@id">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Baslik</label>
                        <input type="text" name="title" class="form-control" value="@Model.GetProperty("title").GetString()" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Video URL</label>
                        <input type="url" name="url" class="form-control" value="@Model.GetProperty("url").GetString()" required />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Aciklama</label>
                        <textarea name="description" class="form-control" rows="3" required>@Model.GetProperty("description").GetString()</textarea>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Sure (saniye)</label>
                        <input type="number" name="durationSec" class="form-control" min="1" value="@Model.GetProperty("durationSec").GetInt32()" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Minimum Yas Grubu</label>
                        @{
                            var currentAgeGroup = Model.GetProperty("minAgeGroup").GetString();
                        }
                        <select name="minAgeGroup" class="form-select" required id="selAgeGroup">
                            @foreach (var ag in new[] { ("Child", "Cocuk (4-12)"), ("Adult", "Yetiskin (13-65)"), ("Senior", "Yasli (65+)") })
                            {
                                if (ag.Item1 == currentAgeGroup)
                                {
                                    <option value="@ag.Item1" selected="selected">@ag.Item2</option>
                                }
                                else
                                {
                                    <option value="@ag.Item1">@ag.Item2</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Abonelik Filtresi</label>
                        @{
                            var currentSub = Model.TryGetProperty("subscriptionFilter", out var sfVal) && sfVal.ValueKind != System.Text.Json.JsonValueKind.Null ? sfVal.GetString() : "";
                        }
                        <select name="subscriptionFilter" class="form-select" id="selSubFilter">
                            @foreach (var sf in new[] { ("", "Tumu"), ("Bireysel", "Bireysel"), ("Merkezi", "Merkezi"), ("Endustriyel", "Endustriyel") })
                            {
                                if (sf.Item1 == currentSub)
                                {
                                    <option value="@sf.Item1" selected="selected">@sf.Item2</option>
                                }
                                else
                                {
                                    <option value="@sf.Item1">@sf.Item2</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Etiketler</label>
                        <input type="text" name="tags" class="form-control" value="@Model.GetProperty("tags").GetString()" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Thumbnail URL</label>
                        <input type="url" name="thumbnailUrl" class="form-control" value="@Model.GetProperty("thumbnailUrl").GetString()" required />
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>Guncelle</button>
                    <a href="/Admin/Videos" class="btn btn-outline-secondary ms-2">Iptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
